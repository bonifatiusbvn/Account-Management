@model AccountManagement.DBContext.Models.ViewModels.ItemInWord.ItemInWordMasterView
@using AccountManegments.Web.Models;
@inject IHttpContextAccessor Accessor;
@inject UserSession _userSession
@{
    ViewData["Title"] = "InWard Challan";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}

<style>
    .fixed-button {
        position: fixed;
        top: 80px;
        right: 20px;
        z-index: 1000;
    }
</style>
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="d-flex align-items-center">
        <form class="position-relative">
            @if (UserSession.FormPermisionData.Any(a => a.FormName == "Inward Challan" && (a.Add == true)))
            {
                <button type="button" class="btn btn-primary fixed-button" onclick="ClearItemInWordTextBox()"><i class="lni lni-circle-plus"></i>Item Inward</button>
            }
        </form>
    </div>
</div>
<div class="">
    <div class="">
        <div class=" radius-10 w-100">
            <div class="my-3 border-bottom"></div>
            <div class="">
                <div class="row">
                    <div class="col-12 col-lg-7 col-md-7 col-xl-7">
                        <div class="card radius-10 w-100">
                            <div class="card-body">
                                <div class="row w-100 ac-view-list card radius-10 w-100">
                                    <div class="row ">
                                        <div class="col-12">
                                            <div class="card-body">
                                                <div class="row g-3">
                                                    <div class="col-12 col-lg-4">
                                                        <input class="form-control" id="txtItemInWordSearch" onkeyup="filterItemInWordTable()" placeholder="Search" />
                                                    </div>
                                                    <div class="col-12 col-lg-4">
                                                        <select class="form-select" id="ItemInWordSearchBy" onchange="filterItemInWordTable()">
                                                            <option selected="selected">All</option>
                                                            <option>ItemName</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-12 col-lg-4">
                                                        <select class="form-select" id="ItemInWordSortBy" onchange="sortItemInWordTable()">
                                                            <option value="DescendingCreatedOn" selected="selected">Most Recent</option>
                                                            <option value="AscendingCreatedOn">First Created</option>
                                                            <option value="AscendingItem">ItemName(A-Z)</option>
                                                            <option value="DescendingItem">ItemName(Z-A)</option>
                                                        </select>
                                                    </div>
                                                </div><!--end row-->
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table align-middle mb-0">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Item Name</th>
                                                        <th>Quantity</th>
                                                        <th>Status</th>
                                                        @if (UserSession.FormPermisionData.Any(a => a.FormName == "Inward Challan" && (a.Edit == true || a.Delete == true)))
                                                        {
                                                            <th>Action</th>
                                                        }
                                                    </tr>
                                                </thead>
                                                <tbody id="itemInWordtbody">
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--end row-->
                    </div>
                    <div class="col-12 col-lg-5 col-xl-5 ac-detail hide-sm">
                        <div class="card radius-10">
                            <h5 class="card-header">Item Inward Details</h5>
                            <div class="card-body" style="height:650px;overflow-y: auto;">
                                <div class="row g-3 ac-detail d-none">
                                    <div class="col-12">
                                        <label class="form-label">Item Name</label>
                                        <input type="text" class="form-control" id="dspItem" readonly>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">Unit Name</label>
                                        <input type="text" class="form-control" id="dspUnitName" readonly>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">Site Name</label>
                                        <input type="text" class="form-control" id="dspSiteId" readonly>
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">Quantity</label>
                                        <input type="text" class="form-control" id="dspQuantity" readonly>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">IsApproved</label>
                                        <div class="form-check form-switch mb-3">
                                            <input class="form-check-input font-22" id="dspIsApproved" type="checkbox" style="margin-left:-35px;" disabled>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">Date</label>
                                        <input type="text" class="form-control" id="dspDate" readonly>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">VehicleNumber</label>
                                        <input type="text" class="form-control" id="dspVehicleNumber" readonly>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">ReceiverName</label>
                                        <input type="text" class="form-control" id="dspReceiverName" readonly>
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">DocumentName</label>
                                        <div class="holder m-2">
                                            <img id="dspDocumentName" src="#" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @* </form> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="offcanvas offcanvas-end border-0 w-25 ac-add-edit" id="CreateItemInWord">
        <div class="d-flex align-items-center bg-primary bg-gradient p-3 offcanvas-header">
            <h5 class="m-0 me-2 text-white">Create Item Inword</h5>
            <button type="button" class="btn-close btn-close-white ms-auto" id="customizerclose-btn" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body p-0">
            <div data-simplebar class="h-100">
                <div class="p-4">
                    <div class="card">
                        <div class="card-body">
                            <form class="row g-3" id="itemInWordForm" enctype="multipart/form-data">
                                <div class="col-12">
                                    <label for="txtItemId" class="form-label ">Product Names</label>
                                    <select id="txtItemId" name="txtItemId" class="single-select form-select" required>
                                        <option selected disabled value="">select Item</option>
                                    </select>
                                    <span id="spnItemId" class="text-danger"></span>
                                    <input type="hidden" id="searchItemnameid">
                                    @* <label class="form-label">Item</label>
                                    <select class="form-control" id="txtItemId">
                                    <option value="">--Select Item--</option>
                                    </select> *@
                                    <input type="hidden" id="txtItemName">
                                    <input type="hidden" id="txtItemInWordid">
                                    <input type="hidden" id="userRoleId" value="@_userSession.UserRole">
                                    <input type="hidden" id="txtSiteid" value="@UserSession.SiteId">
                                    <input type="hidden" id="txtCreatedBy" value="@_userSession.UserId">
                                    <span id="spnItemName" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Unit Type</label>
                                    <select class="form-select" id="txtUnitType" name="txtUnitType">
                                        <option selected disabled value="">--Select Unit Type--</option>
                                    </select>
                                    <span id="spnUnitType" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Quantity</label>
                                    <input type="text" class="form-control" placeholder="Quantity" id="txtQuantity" name="txtQuantity" required>
                                    <span id="spnQuantity" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Receiver Name</label>
                                    <input type="text" class="form-control" placeholder="Receiver Name" id="txtReceiverName" name="txtReceiverName" required>
                                    <span id="spnReceiverName" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Vehicle Number</label>
                                    <input type="text" class="form-control text-uppercase" placeholder="Vehicle Number" id="txtVehicleNumber" name="txtVehicleNumber" required>
                                    <span id="spnVehicleNumber" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Date</label>
                                    <input type="date" id="txtIteminwordDate" class="form-control" required max="@DateTime.Today.ToString("yyyy-MM-dd")" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                    <span id="spnDate" class="text-danger"></span>
                                </div>
                                <div class="col-6" id="siteSection" style="display: none;">
                                    <label class="form-label">Site</label>
                                    <select class="form-select" id="siteNameList" required>
                                        <option selected disabled value="">--Select--</option>
                                    </select>
                                    <span id="spnInWardSiteName" class="text-danger"></span>
                                </div>
                                <div class="container">
                                    <div id="MultipleImageContainer">
                                        <div class="row multiple-images">
                                            <div class="col-12">
                                                <label>Document</label>
                                                <input type="text" id="txtDocumentName" class="form-control" hidden>
                                                <input type="file" id="txtDocument" name="txtDocument" class="form-control" onchange="showpictures()" multiple>
                                                <span id="spnDocument" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div id="dvDisplayImages" class="col-lg-12">
                                    <div class="row" id="addNewImage">

                                        @*  <table class="table table-sm table-nowrap align-middle mb-0">
                                        <tbody id="addNewImage"></tbody>
                                        </table> *@
                                    </div>
                                </div>
                                <!--end row-->

                                <div class="col-12">
                                    <button type="button" class="btn btn-lg btn-success col-lg-12" onclick="validateAndCreateItemInWord()" id="btnitemInWord">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    #txtUnitType-error, #txtQuantity-error, #txtReceiverName-error,
    #txtVehicleNumber-error, #txtDocument-error {
        color: red;
    }

    label.failed {
        color: red;
    }
</style>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <script src="~/moduls/iteminwordscript.js" asp-append-version="true"></script>
}

