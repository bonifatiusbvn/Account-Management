@model List<AccountManagement.DBContext.Models.ViewModels.InvoiceMaster.SupplierInvoiceModel>

@{
    decimal? youGaveTotal = 0;
    decimal? youGetTotal = 0;
}

@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        if (item.InvoiceNo == "PayOut")
        {
            youGaveTotal += item.TotalAmount;
            <tr style="height:55px;">
                <td>@item.InvoiceNo</td>
                <td>@item.Date?.ToString("MM-dd-yyyy")</td>
                <td>@item.SiteName</td>
                <td>@item.CompanyName</td>
                <td>@item.SupplierName</td>
                <td class="text-danger">@item.TotalAmount</td>
                <td></td>
                @if (UserSession.FormPermisionData.Any(a => a.FormName == "Reports" && (a.Edit == true || a.Delete == true)))
                {
                    <td>
                        @if (UserSession.FormPermisionData.Any(a => a.FormName == "Reports" && (a.Edit == true)))
                        {
                            <a class="btn text-primary" onclick="EditPayoutDetails('@item.Id')" title="Edit" aria-label="Edit"><i class="fadeIn animated bx bx-edit"></i></a>
                        }
                        @if (UserSession.FormPermisionData.Any(a => a.FormName == "Reports" && (a.Delete == true)))
                        {
                            <a href="javascript:;" class="btn text-primary" onclick="deletePayoutDetails('@item.Id')" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Delete" aria-label="Delete"><i class="lni lni-trash"></i></a>
                        }
                    </td>
                }
            </tr>
        }
        else
        {
            youGetTotal += item.TotalAmount;
            <tr style="height:55px;">
                <td>@item.InvoiceNo</td>
                <td>@item.Date?.ToString("MM-dd-yyyy")</td>
                <td>@item.SiteName</td>
                <td>@item.CompanyName</td>
                <td>@item.SupplierName</td>
                <td></td>
                <td class="text-success" style="width:200px;">@item.TotalAmount</td>
                <td></td>
            </tr>
        }
    }
}
else
{
    <tr style="height:55px;">
        <td colspan="6" class="text-center">No data found for the selected criteria.</td>
    </tr>
}

<script type="text/javascript">
    $(document).ready(function () {
        var youGaveTotal = @youGaveTotal ?? 0;
        var youGetTotal = @youGetTotal ?? 0;

        var footerContent = '<tr style="height:55px;"><td><b>Total</b></td><td></td><td></td><td></td><td></td>' +
            '<td><b class="text-danger">' + youGaveTotal.toFixed(2) + '</b></td>' +
            '<td><b class="text-success">' + youGetTotal.toFixed(2) + '</b></td></tr>';
        $('#reportInvoiceListFooter').html(footerContent);
    });
</script>
