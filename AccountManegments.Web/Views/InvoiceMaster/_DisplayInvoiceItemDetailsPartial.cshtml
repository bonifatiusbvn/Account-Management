@model List<AccountManagement.DBContext.Models.ViewModels.ItemMaster.POItemDetailsModel>

@foreach (var item in Model)
{
    <tr id="templateRow_@Convert.ToInt64(item.RowNumber + 1)" class="product" data-product-id="@item.ItemId" onclick="updateProductTotalAmount(this)">
        <td scope="row" class="product-id">@Convert.ToInt64(item.RowNumber + 1)</td>
        <td class="text-start">
            <p id="txtItemName" style="padding-top:5px !important; ">@item.ItemName</p>
            <input type="hidden" class="form-control bg-light border-0" id="txtItemId" readonly value="@item.ItemId" />
            <input type="hidden" class="form-control bg-light border-0" id="UnitTypeId" readonly value="@item.UnitType" />
        </td>
        <td class="text-start">
            <input type="text" class="form-control bg-light border-0" id="txtHSNcode" value="@item.Hsncode" readonly style="width: 75px;" />
        </td>
        <td class="text-start">
            <div class="">
                @if (item.Quantity == 0)
                {
                    <input type="number" class="product-quantity form-control" id="txtproductquantity" value="" min="1" oninput="preventEmptyValue(this)" style="width:80px;">
                }
                else
                {
                    <input type="number" class="product-quantity form-control" id="txtproductquantity" value="@item.Quantity" min="1" oninput="preventEmptyValue(this)" style="width:80px;">
                }
            </div>
        </td>
        <td class="text-start">
            <div class="">
                <select class="form-control" id="txtPOUnitType_@item.ItemId" style="width: 75px;">
                    <option value="@item.UnitType">@item.UnitTypeName</option>
                </select>
            </div>
        </td>
        <td class="text-start">
            <input type="text" class="form-control bg-light border-0" id="txtproductamount" value="@item.PricePerUnit" oninput="preventEmptyValue(this)" />
            <input type="hidden" class="form-control bg-light border-0" id="productamount" value="@item.PricePerUnit" />
        </td>
        <td class="text-start">
            <div class="row">
                <div class="col-sm-6">
                    @if (item.DiscountAmount != null)
                    {
                        <input type="text" class="product-discountamount form-control bg-light border-0 " id="txtdiscountamount" value="@item.DiscountAmount" />
                    }
                    else
                    {
                        <input type="text" class="form-control bg-light border-0" id="txtdiscountamount" value="0" />
                    }

                </div>
                <div class="col-sm-6">
                    @if (item.DiscountPer != null)
                    {
                        <input type="text" class="product-discountpercentage form-control bg-light border-0" id="txtdiscountpercentage" value="@item.DiscountPer" />
                    }
                    else
                    {
                        <input type="text" class="form-control bg-light border-0" id="txtdiscountpercentage" value="0" />
                    }

                </div>

            </div>


        </td>

        <td class="text-start">
            <div class="row">
                <div class="col-sm-6">
                    <input type="text" class="product-Gstper form-control bg-light border-0" id="txtgst" value="@item.GstPercentage" oninput="preventEmptyValue(this)" />
                </div>
                <div class="col-sm-6">
                    <input type="number" class="product-Gstamount form-control border-0" id="txtgstAmount" value="@item.Gstamount" readonly />
                </div>

            </div>
        </td>
        <td class="text-start">
            <div>
                <input type="text" class="product-producttotalamount form-control  border-0" id="txtproducttotalamount" value="@item.TotalAmount" readonly />
            </div>
        </td>
        <td class="product-removal">
            <a class="btn text-primary remove-btn" onclick="removeItem(this)"><i class="lni lni-trash"></i></a>
        </td>
    </tr>
}


@section Scripts {
    <script src="~/moduls/invoicemasterscript.js" asp-append-version="true"></script>
}
