@model AccountManagement.DBContext.Models.ViewModels.InvoiceMaster.SupplierInvoiceMasterView

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .invoice-table {
            border-collapse: collapse;
            width: 100%;
        }

            .invoice-table th, .invoice-table td {
                border-left: 1px solid lightgray;
                border-right: 1px solid lightgray;
                padding: 2px;
            }

                .invoice-table th[colspan] {
                    text-align: center;
                }

            .invoice-table thead th {
                border-top: 1px solid lightgray;
                border-bottom: 1px solid lightgray;
            }

            .invoice-table tbody td {
                border-top: none;
                border-bottom: none;
            }

            .invoice-table tbody tr:first-child td {
                border-top: none;
            }

            .invoice-table tbody tr:last-child td {
                border-bottom: none;
            }

        .ProductTotalHR {
            border: 0px solid lightgray;
            border-width: 0.5px;
            margin: -3px;
            width: -1%;
        }

        .GSTTotalHR {
            border: 0px solid lightgray;
            border-width: 0.5px;
            margin: -3px;
            width: -1%;
        }

        .VerticalBorder {
            border-left: 2px solid lightgray;
            height: 100%;
        }

        .d-flex {
            position: relative;
        }

        .VerticalBorderInHeader {
            border-left: 2px solid lightgray;
            position: absolute;
            left: 101%;
            height: 100%;
            transform: translateX(-50%);
        }

        .Address-Details {
            display: flex;
            align-items: stretch;
            border: 1px solid lightgray;
            height: 185px;
        }

    </style>
</head>
<body>
    <div class="row">
        <div class="col-xxl-9">
            <div class="card border-0">
                <div class="row">
                    <div class="card-body" style="width:1070px;">
                        <div class="card-title text-center"><h5>Tax Invoice</h5></div>
                        <div class="d-flex">
                            <div class="flex-grow-1 col-6" style="border: 1px solid lightgray;">
                                <div class="flex-shrink-0 mt-sm-0 mt-3">
                                    <span class="text-muted"><b>@Model.SupplierName</b></span> <br />
                                    <span class="text-muted">@Model.SupplierFullAddress</span><br />
                                    <span class="text-muted text-uppercase">GSTIN/UIN :@Model.SupplierGstNo</span><br />
                                    <p class="text-muted">State Name : @Model.SupplierState, Code : @Model.StateCode</p>
                                </div>
                                <div style="border: 0px solid lightgray;border-width:0.5px;margin:0px;width:-1%;"></div>
                                <br />
                                <div class="flex-shrink-0 mt-sm-0 mt-3">
                                    @{
                                        string SiteStateCode = "";
                                        string SiteState = "";
                                        string SiteAddress = "";

                                        if (!string.IsNullOrEmpty(Model.ShippingAddress))
                                        {
                                            string shippingAddress = Model.ShippingAddress;
                                            string[] addressParts = shippingAddress.Split(',');
                                            if (addressParts.Length > 4)
                                            {
                                                SiteStateCode = string.IsNullOrWhiteSpace(addressParts[addressParts.Length - 1].Trim()) ? "" : addressParts[addressParts.Length - 1].Trim();
                                                SiteState = string.IsNullOrWhiteSpace(addressParts[addressParts.Length - 3].Trim()) ? "" : addressParts[addressParts.Length - 3].Trim();
                                                SiteAddress = string.Join(",", addressParts.Take(addressParts.Length - 1));
                                            }
                                            SiteAddress = Model.ShippingAddress;
                                        }
                                    }
                                    <p class="text-muted"><b>Consignee (Ship to):</b></p>
                                    <span class="text-muted text-uppercase"><b>@Model.SiteName</b></span><br />
                                    <span class="text-muted">@SiteAddress</span><br />
                                    <span class="text-muted">GSTIN/UIN :@Model.CompanyGstNo</span><br />
                                    <p class="text-muted">State Name :  @SiteState, Code :  @SiteStateCode</p>
                                </div>
                            </div>
                            <div class="flex-grow-1 col-6" style="border: 1px solid lightgray;position: relative;">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="flex-shrink-0 mt-sm-0 mt-3 ">
                                            <p class="text-muted" style="padding:4px;padding-left: 0px;height: 15px;">Invoice No</p>
                                            <p class="text-muted text-uppercase" style="height: 15px;"><b>@Model.SupplierInvoiceNo</b></p>
                                        </div>
                                        <div style="border: 0px solid lightgray;border-width:0.5px;margin:0px;width:108%;"></div>
                                        <div class="flex-shrink-0 mt-sm-0 mt-3 ">
                                            <p class="text-muted" style="padding:4px;padding-left: 0px;height: 15px;">Delivery Note</p>
                                            <p class="text-muted text-uppercase" style="height: 15px;"><b></b></p>
                                        </div>
                                        <div style="border: 0px solid lightgray;border-width:0.5px;margin:0px;width:108%;"></div>
                                        <div class="flex-shrink-0 mt-sm-0 mt-3 ">
                                            <p class="text-muted" style="padding:4px;padding-left: 0px;height: 15px;">Reference No. & Date</p>
                                            <p class="text-muted text-uppercase" style="height: 15px;"><b></b></p>
                                        </div>
                                        <div style="border: 0px solid lightgray;border-width:0.5px;margin:0px;width:108%;"></div>
                                        <div class="flex-shrink-0 mt-sm-0 mt-3 ">
                                            <p class="text-muted" style="padding:4px;padding-left: 0px;height: 15px;">Challan/Document No</p>
                                            <p class="text-muted text-uppercase" style="height: 15px;"><b>@Model.ChallanNo</b></p>
                                        </div>
                                        <div style="border: 0px solid lightgray;border-width:0.5px;margin:0px;width:108%;"></div>
                                        <div class="flex-shrink-0 mt-sm-0 mt-3 ">
                                            <p class="text-muted" style="padding:4px;padding-left: 0px;height: 15px;">LR No.</p>
                                            <p class="text-muted text-uppercase" style="height: 15px;"><b>@Model.Lrno</b></p>
                                        </div>
                                        <div style="border: 0px solid lightgray;border-width:0.5px;margin:0px;width:108%;"></div>
                                        <div class="flex-shrink-0 mt-sm-0 mt-3 ">
                                            <p class="text-muted" style="padding:4px;padding-left: 0px;height: 15px;">Dispatched By</p>
                                            <p class="text-muted text-uppercase" style="height: 15px;"><b>@Model.DispatchBy</b></p>
                                        </div>
                                    </div>
                                    <div class="VerticalBorderInHeader"></div>
                                    <div class="col-6">
                                        <div class="flex-shrink-0 mt-sm-0 mt-3 ">
                                            <p class="text-muted" style="padding:4px;padding-left: 0px;height: 15px;">Dated</p>
                                            <p style="height: 15px;"><span class="text-muted fw-normal"><b>@Model.Date?.ToString("dd-MMM-yy")</b></span></p>
                                        </div>
                                        <div style="border: 0px solid lightgray;border-width:0.5px;margin:0px;width:100%;"></div>
                                        <div class="flex-shrink-0 mt-sm-0 mt-3 ">
                                            <p class="text-muted" style="padding:4px;padding-left: 0px;height: 15px;">Mode / Terms of Payment</p>
                                            <p class="text-muted text-uppercase" style="height: 15px;"><b>@Model.PaymentTerms</b></p>
                                        </div>
                                        <div style="border: 0px solid lightgray;border-width:0.5px;margin:0px;width:100%;"></div>
                                        <div class="flex-shrink-0 mt-sm-0 mt-3">
                                            <p class="text-muted" style="padding:4px;padding-left: 0px;height: 15px;">Other Refrences</p>
                                            <p class="text-muted text-uppercase" style="height: 15px;"><b></b></p>
                                        </div>
                                        <div style="border: 0px solid lightgray;border-width:0.5px;margin:0px;width:100%;"></div>
                                        <div class="flex-shrink-0 mt-sm-0 mt-3 ">
                                            <p class="text-muted" style="padding:4px;padding-left: 0px;height: 15px;">Dated</p>
                                            <p class="text-muted text-uppercase" style="height: 15px;">
                                                <b></b>
                                            </p>
                                        </div>
                                        <div style="border: 0px solid lightgray;border-width:0.5px;margin:0px;width:100%;"></div>
                                        <div class="flex-shrink-0 mt-sm-0 mt-3 ">
                                            <p class="text-muted" style="padding:4px;padding-left: 0px;height: 15px;">Vehicle No</p>
                                            <p class="text-muted text-uppercase" style="height: 15px;"><b>@Model.VehicleNo</b></p>
                                        </div>
                                        <div style="border: 0px solid lightgray;border-width:0.5px;margin:0px;width:100%;"></div>
                                        <div class="flex-shrink-0 mt-sm-0 mt-3 ">
                                            <p class="text-muted" style="padding:4px;padding-left: 0px;height: 15px;">Destination</p>
                                            <p class="text-muted text-uppercase" style="height: 15px;"><b></b></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex Address-Details">
                            <div class="flex-grow-1 col-6">
                                <p class="text-muted"><b>Buyer (Bill to)</b></p>
                                <span class="text-muted text-uppercase"><b>@Model.CompanyName</b></span><br />
                                <span class="text-muted text-uppercase">@Model.CompanyAddress,@Model.CompanyArea</span><br />
                                <span class="text-muted text-uppercase">@Model.CompanyCityName</span><br />
                                <span class="text-muted">GSTIN/UIN :@Model.CompanyGstNo</span><br />
                                <p class="text-muted">State Name : @Model.CompanyStateName, Code : @Model.StateCode</p>
                            </div>
                            <div class="VerticalBorder"></div>
                            <div class="flex-grow-1 col-6">
                                <p class="text-muted">Terms of Delivery</p>
                                <p class="text-muted"></p>
                            </div>
                        </div>
                        <table class="table text-center align-middle invoice-table" style="border: 1px solid lightgray;">
                            <thead class="text-muted">
                                <tr class="table-active">
                                    <th>SINo.</th>
                                    <th>Description of Goods</th>
                                    <th>HSN/SAC</th>
                                    <th>Quantity</th>
                                    <th>Rate</th>
                                    <th>per</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int index = 1;
                                    decimal? subtotal = 0;
                                    decimal? totalAmt = 0;
                                    decimal? TotalQty = 0;
                                    decimal? sgst = 0;
                                    decimal? cgst = 0;
                                    sgst = (Model.TotalGstamount / 2);
                                    sgst = Math.Round(sgst.Value, 2);
                                    cgst = (Model.TotalGstamount / 2);
                                    cgst = Math.Round(cgst.Value, 2);

                                }
                                @foreach (var item in Model.ItemList)
                                {
                                    subtotal = (item.Quantity * item.PricePerUnit);
                                    totalAmt += subtotal;
                                    TotalQty += item.Quantity;
                                    var trimmedUnitTypeName = item.UnitTypeName.Split('-').First().Trim();

                                    <tr>
                                        <td>@index</td>
                                        <td class="text-start">
                                            <span class="fw-medium fw-semibold" id="txtproductname">@item.ItemName</span><br />
                                            <span class="fw-medium text-muted" id="txtproductname">@item.ItemDescription</span>
                                        </td>
                                        <td id="txtper">@item.Hsncode</td>
                                        <td id="txtquantity">@item.Quantity @trimmedUnitTypeName</td>
                                        <td id="txtHSN">@item.PricePerUnit</td>
                                        <td id="txtper">@trimmedUnitTypeName</td>
                                        <td id="txttotal">₹@($"{item.Quantity * item.PricePerUnit:F2}")</td>
                                    </tr>
                                    index++;
                                }
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td style="text-align: end;">SGST</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td><b>₹@sgst</b></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td style="text-align: end;">CGST</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td><b>₹@cgst</b></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td style="text-align: end;">TDS</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td><b>₹@Model.Tds</b></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td><div class="ProductTotalHR"></div></td>
                                    <td><div class="ProductTotalHR"></div></td>
                                    <td><div class="ProductTotalHR"></div></td>
                                    <td><div class="ProductTotalHR"></div></td>
                                    <td><div class="ProductTotalHR"></div></td>
                                    <td><div class="ProductTotalHR"></div></td>
                                    <td><div class="ProductTotalHR"></div></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td style="text-align: end;">Total</td>
                                    <td></td>
                                    <td>@TotalQty</td>
                                    <td></td>
                                    <td></td>
                                    <td><b>₹@Model.TotalAmountInvoice</b></td>
                                </tr>
                            </tbody>
                        </table><!--end table-->
                        <div class="flex-grow-1 col-12" style="border: 1px solid lightgray;">
                            <span class="text-muted">Amount Chargeable (in words)<i style="margin-left: 740px" ;>E. &amp; O.E</i></span><br />
                            <p class="text-muted text-capitalize"><b>INR @ViewData["TotalAmountInWords"]</b></p>
                        </div>
                        @{
                            var groupedItems = Model.ItemList
                            .GroupBy(item => new { StateTaxPer = item.GstPercentage / 2, CenteralTaxPer = item.GstPercentage / 2 })
                            .Select(group => new
                            {
                                Hsncode = group.First().Hsncode,
                                TaxableValue = group.Sum(item => item.Quantity * item.PricePerUnit),
                                StateTaxPer = group.Key.StateTaxPer,
                                StateTax = Math.Round(group.Sum(item => item.Quantity * item.PricePerUnit * group.Key.StateTaxPer / 100).GetValueOrDefault(), 2),
                                CenteralTaxPer = group.Key.CenteralTaxPer,
                                CenteralTax = Math.Round(group.Sum(item => item.Quantity * item.PricePerUnit * group.Key.CenteralTaxPer / 100).GetValueOrDefault(), 2),
                                GstAmount = group.Sum(item => item.Gstamount ?? 0)
                            }).ToList();

                            decimal? taxTotal = groupedItems.Sum(item => item.TaxableValue);
                            decimal? TotalCenteralTax = groupedItems.Sum(item => item.CenteralTax);
                            decimal? TotalStateTax = groupedItems.Sum(item => item.StateTax);
                            decimal? TotalGSTAmount = TotalCenteralTax + TotalStateTax;
                        }

                        <table class="table text-center align-middle invoice-table" style="border: 1px solid lightgray;">
                            <thead class="btn-primary">
                                <tr class="table-active" style="color:white;">
                                    <th rowspan="2">HSN/SAC</th>
                                    <th rowspan="2">Taxable<br /> Value</th>
                                    <th colspan="2">Central Tax</th>
                                    <th colspan="2">State Tax</th>
                                    <th rowspan="2">Total<br /> Tax Amount</th>
                                </tr>
                                <tr class="table-active" style="color:white;">
                                    <th>Rate</th>
                                    <th>Amount</th>
                                    <th>Rate</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in groupedItems)
                                {
                                    <tr>
                                        <td class="border">@item.Hsncode</td>
                                        <td class="border">₹@item.TaxableValue.ToString("0.00")</td>
                                        <td class="border">@item.CenteralTaxPer%</td>
                                        <td class="border">₹@item.CenteralTax.ToString("0.00")</td>
                                        <td class="border">@item.StateTaxPer%</td>
                                        <td class="border">₹@item.StateTax.ToString("0.00")</td>
                                        <td class="border"><b>₹@item.GstAmount.ToString("0.00")</b></td>
                                    </tr>
                                }
                                <tr>
                                    <td class="text-end border">Total</td>
                                    <td class="border"><b>₹@taxTotal?.ToString("0.00")</b></td>
                                    <td class="border"></td>
                                    <td class="border"><b>₹@TotalCenteralTax?.ToString("0.00")</b></td>
                                    <td class="border"></td>
                                    <td class="border"><b>₹@TotalStateTax?.ToString("0.00")</b></td>
                                    <td class="border"><b>₹@TotalGSTAmount?.ToString("0.00")</b></td>
                                </tr>
                            </tbody>
                        </table><!--end table-->
                        <div class="flex-grow-1 col-12" style="border: 1px solid lightgray;">
                            <span class="text-muted">Tax Amount (in words) :</span><br />
                            <p class="text-muted text-capitalize"><b>INR @ViewData["TotalGstInWords"]</b></p>
                            <div class="d-flex">
                                <div class="flex-grow-1 col-6">
                                    <br />
                                    <br />
                                    <span class="text-muted"><u>Declaration</u></span><br />
                                    <span class="text-muted">We declare that this invoice shows the actual price of the goods and that app particulars are true and correct.</span><br />
                                </div>
                                <div class="flex-grow-1 col-6">
                                    <br />
                                    <br />
                                    <div class="text-end p-1" style="border: 1px solid lightgray; height:100px; width:507px;">
                                        <p class="text-muted" style="text-align: end;"><b>for @Model.SupplierName</b></p>
                                        <p class="text-muted" style="margin-top:45px;text-align: end;">Authorised Signatory</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex">
                            <p style="margin-left: 400px;">This is a Computer Generated Invoice</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>