@model IEnumerable<AccountManagement.DBContext.Models.ViewModels.ItemMaster.ItemMasterModel>

@foreach (var item in Model)
{
    <div class="row ac-item border-2 text-sm-center p-2">
        <div class="col-6 col-sm-6 order1">
            <p id="ptimeName">@item.ItemName</p>
        </div>
        <div class="col-2 col-sm-2 order2">
            <p id="pQtyType">@item.PricePerUnit</p>
        </div>
        <div class="col-2 col-sm-2 order2">
            <input type="number" class="product-quantity form-control" id="inputproductquantity" value="1" style="width:80px;">
        </div>
        <div class="col-2 col-sm-2 font-22 order3">
            <div class="font-22">
                <a id="addItemButton" class="" onclick="SerchItemDetailsById('@item.ItemId',this)" style=""><i class="lni lni-circle-plus"></i></a>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    document.getElementById('inputproductquantity').addEventListener('input', function () {
        const value = parseFloat(this.value);
        if (value < 0) {
            toastr.warning('Please Enter value greater then zero.');
            this.value = 0.1;
        } else if (value === 0) {
            toastr.warning('Quantity cannot be zero.');
        }
    });
</script>
@section Scripts {
    <script src="~/moduls/invoicemasterscript.js" asp-append-version="true"></script>
}