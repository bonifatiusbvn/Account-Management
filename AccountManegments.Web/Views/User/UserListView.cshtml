@{
    ViewData["Title"] = "UserListView";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Users</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0 align-items-center">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><ion-icon name="home-outline"></ion-icon></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">User Details</li>
            </ol>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="card radius-10 w-100">
            <div class="d-flex align-items-center">
                <h2 class="h5 mb-0">User Details</h2>
                <form class="ms-auto position-relative">
                    <button type="button" class="btn btn-info px-5" onclick="ClearTextBox()"><i class="lni lni-circle-plus"></i>Add User</button>
                </form>
            </div>
            <div class="my-3 border-bottom"></div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="card-body">
                            <div class="row g-3">

                                <div class="col-12 col-lg-4">
                                    <input class="form-control" id="txtSearch" onkeyup="filterTable()" placeholder="Search">
                                    </input>
                                </div>
                                <div class="col-12 col-lg-4">
                                    <select class="form-select" id="ddlSearchBy" onchange="filterTable()">
                                        <option selected="selected">All</option>
                                        <option>UserName</option>
                                        <option>Email</option>
                                        <option>Phone</option>
                                    </select>
                                </div>

                                <div class="col-12 col-lg-4">
                                    <select class="form-select" id="ddlSortBy" onchange="sortTable()">
                                        <option value="DescendingCreatedOn" selected="selected">Default sorting</option>
                                        <option value="AscendingRole">Ascending Role</option>
                                        <option value="DescendingRole">Descending Role</option>
                                        <option value="AscendingActive">Ascending Active</option>
                                        <option value="DescendingActive">Descending Active</option>
                                        <option value="AscendingEmail">Ascending Email</option>
                                        <option value="DescendingEmail">Descending Email</option>
                                        <option value="AscendingPhone">Ascending Phone</option>
                                        <option value="DescendingPhone">Descending Phone</option>
                                    </select>
                                </div>
                            </div><!--end row-->

                        </div>

                    </div>

                </div><!--end row-->
                <div class="table-responsive mt-2">
                    <table class="table align-middle mb-0">
                        <thead class="table-light" id="userTable">
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>User Name</th>
                                <th>Email</th>
                                <th>Phone.No</th>
                                <th>Active</th>
                                <th>Role Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="Usertbody">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="offcanvas offcanvas-end border-0 w-25" tabindex="-1" id="createUser">
    <div class="d-flex align-items-center bg-primary bg-gradient p-3 offcanvas-header">
        <h5 class="m-0 me-2 text-white">Create User</h5>

        <button type="button" class="btn-close btn-close-white ms-auto" id="customizerclose-btn" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body p-0">
        <div data-simplebar class="h-100">
            <div class="p-4">
                <div class="card">
                    <div class="card-body">
                        <form class="row g-3" id="userForm">
                            <div class="col-12">
                                <label class="form-label">First Name</label>
                                <input type="text" class="form-control form-control-lg mb-3" placeholder="First Name" id="txtFirstName" required>
                                <input type="hidden" id="txtUserid">
                                <span id="spnFirstName" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Last Name</label>
                                <input type="text" class="form-control form-control-lg mb-3" placeholder="Last Name" id="txtLastName" required>
                                <span id="spnLastName" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label class="form-label">User Name</label>
                                <input type="text" class="form-control form-control-lg mb-3" placeholder="User Name" id="txtUserName" required>
                                <span id="spnUserName" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Password</label>
                                <input type="text" class="form-control form-control-lg mb-3" placeholder="Password" id="txtPassword" required>
                                <span id="spnPassword" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Email</label>
                                <input type="text" class="form-control form-control-lg mb-3" placeholder="Email" id="txtEmail" required>
                                <span id="spnEmail" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Phone Number</label>
                                <input type="text" class="form-control form-control-lg mb-3" placeholder="Phone Number" id="txtPhoneNo" required>
                                <span id="spnPhoneNo" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <button type="button" class="btn btn-lg btn-success col-lg-12" onclick="validateAndCreateUser()" id="btnuser"></button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
@section Scripts {

    <script src="~/moduls/authenticationscript.js"></script>
}
