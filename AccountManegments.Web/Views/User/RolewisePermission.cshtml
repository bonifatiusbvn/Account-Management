@inject IHttpContextAccessor Accessor;
@inject UserSession _userSession
@{
    ViewData["Title"] = "RolewisePermission";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Users</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0 align-items-center">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><ion-icon name="home-outline"></ion-icon></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">User Permission</li>
            </ol>

        </nav>
    </div>

</div>
<div class="">
    <div class="">
        <div class=" radius-10 w-100">
            <div class="d-flex align-items-center">
                <form class="ms-auto position-relative">
                    <button type="button" class="btn btn-info px-5" onclick="ClearRolewisePermissionTextBox()" hidden><i class="lni lni-circle-plus"></i>User</button>
                </form>
            </div>
            <div class="my-3 border-bottom"></div>
            <div class="">

                <div class="row">
                    <div class="col-12 col-lg-7 col-md-7 col-xl-7">
                        <div class="card radius-10 w-100">
                            <div class="card-body">
                                <div class="row ">
                                    <div class="col-12">
                                        <div class="card-body">
                                            <div class="row g-3">

                                                <div class="col-12 col-lg-4">
                                                    <input class="form-control form-control-lg" id="txtSearch" onkeyup="filterRolewiseFormTable()" placeholder="Search">
                                                </div>
                                                <div class="col-12 col-lg-4">
                                                    <select class="form-select form-select-lg" id="ddlSearchBy" onchange="filterRolewiseFormTable()">
                                                        <option selected="selected">All</option>
                                                        <option>UserName</option>
                                                        <option>Email</option>
                                                        <option>Phone</option>
                                                    </select>
                                                </div>

                                                <div class="col-12 col-lg-4">
                                                    <select class="form-select form-select-lg" id="ddlSortBy" onchange="sortRolewiseFormTable()">
                                                        <option value="AscendingCreatedOn" selected="selected">Last Created</option>
                                                        <option value="DescendingCreatedOn" selected="selected">First Created</option>
                                                        <option value="AscendingUserName">UserName(a-z)</option>
                                                        <option value="DescendingUserName">UserName(z-a)</option>
                                                        <option value="AscendingEmail">Email-Asc </option>
                                                        <option value="DescendingEmail">Email-Asc</option>
                                                    </select>
                                                </div>
                                            </div><!--end row-->
                                        </div>
                                    </div>
                                </div>

                                <div class="row w-100 ac-view-list">

                                    <div class="row hide-sm table-light ac-view-header">
                                        <div class="col-5 text-center">
                                            <h5>Role</h5>
                                        </div>
                                        <div class="col-3 ">
                                            <h5 hidden>User Name</h5>
                                        </div>
                                        <div class="col-2 ">
                                            <h5 hidden>Active</h5>
                                        </div>
                                        <div class="col-2">
                                            <h5>Action</h5>
                                        </div>
                                    </div>
                                    <div class="card" id="UserRoletbody">
                                    </div>

                                </div>
                                <div class="table-responsive mt-2  d-none" style="max-height:200PX;">
                                    <table class="table align-middle mb-0" style="">
                                        <thead class="table-light" id="userTable">
                                            <tr>
                                                <th>First Name</th>
                                                <th class="mb-2">User Name</th>
                                                <th class="mb-2">Active</th>
                                                <th class="mb-2">Role Name</th>
                                                <th class="mb-2">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody id="UserRoletbody" style="max-height:20PX;">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!--end row-->


                    </div>
                    <div class="col-12 col-lg-5 col-xl-5 ac-detail hide-sm">
                        <div class="card radius-10">
                            <div class="card-body d-none" style="height:650px">
                                <h5 class="mb-0 mt-4">User Information</h5>
                                <hr>
                                <div class="row g-3">
                                    <div class="col-6">
                                        <label class="form-label">First Name</label>
                                        <input type="text" class="form-control" id="dspFirstName" readonly>
                                        <input type="hidden" class="form-control" id="createdbyid" value="@_userSession.UserId">
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">Last Name</label>
                                        <input type="text" class="form-control" id="dspLastName" readonly>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">Username</label>
                                        <input type="text" class="form-control" id="dspUserName" readonly>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">Site</label>
                                        <input type="text" class="form-control" id="dspSiteName" readonly>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">Password</label>
                                        <input type="text" class="form-control" id="dspPassword" readonly>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">Email</label>
                                        <input type="text" class="form-control" id="dspEmail" readonly>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">Phone</label>
                                        <input type="text" class="form-control" id="dspPhoneNo" readonly>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">Role</label>
                                        <input type="text" class="form-control" id="dspRole" readonly>
                                    </div>

                                </div>
                            </div>
                            @* </form> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="offcanvas offcanvas-end border-0 w-25 ac-add-edit" tabindex="-1" id="createFormGroup">
        <div class="d-flex align-items-center bg-primary bg-gradient p-3 offcanvas-header">
            <h5 class="m-0 me-2 text-white">Update Rolewise Form Permission</h5>

            <button type="button" class="btn-close btn-close-white ms-auto" id="customizerclose-btn" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body p-0">
            <div data-simplebar class="h-100">
                <div class="p-4">
                    <div>
                        <div>
                            <form class="row g-3" id="userForm">
                                <!---Partial View--->
                                <div class="col-12" id="dveditRolePermissionForm"></div>
                                <div class="col-12">
                                    <button type="button" class="btn btn-lg btn-success col-lg-12" onclick="UpdateRolewiseFormPermission()" id="btnUserRolewiseForm">Update</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="~/moduls/rolewiseformpermissionscript.js"></script>
    }
    




