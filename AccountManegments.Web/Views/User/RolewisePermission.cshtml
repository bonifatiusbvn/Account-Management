@inject IHttpContextAccessor Accessor;
@inject UserSession _userSession
@{
    ViewData["Title"] = "User Permission";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}
<style>
    #textRoleName-error {
    color:red;
}
</style>

<div class="">
    <div class="">
        <div class=" radius-10 w-100">
            <div class="d-flex align-items-center">

                <form class="ms-auto position-relative">
                    <button type="button" class="btn btn-primary" onclick="ClearRolewisePermissionTextBox()" hidden><i class="lni lni-circle-plus"></i>Add Site</button>
                </form>
            </div>
            <div class="my-3 border-bottom"></div>
            <div class="">
                <div class="row">
                    <div class="col-12 col-lg-7 col-md-7 col-xl-7">
                        <div class="card radius-10 w-100">
                            <div class="card-body">
                                <div class="row w-100 ac-view-list card radius-10 w-100">
                                    <div class="row ">
                                        <div class="col-12">
                                            <button type="button" class="btn btn-primary nav-btn" data-bs-toggle="modal" data-bs-target="#createRoleModal" onclick="clearTextRoleName()"><i class="lni lni-circle-plus"></i>New Role</button>
                                        </div>
                                    </div>

                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table align-middle mb-0">
                                                <thead class="table-light btn-primary">
                                                    <tr>
                                                        <th>Role</th>
                                                        <th>Active</th>
                                                        @if (UserSession.FormPermisionData.Any(a => a.FormName == "User Permission" && (a.Edit == true || a.Delete == true)))
                                                        {
                                                            <th>Action</th>
                                                        }
                                                    </tr>
                                                </thead>
                                                <tbody id="UserRoletbody">
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="createRoleModal" class="modal fade flip" tabindex="-1" role="dialog" aria-labelledby="createRoleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <form id="addUserRole">
                                        <div class="modal-header bg-primary-subtle p-3">
                                            <h5 class="modal-title" id="createRoleModalLabel">Create Role</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="hstack gap-3 align-items-start">
                                                <div class="flex-grow-1">
                                                    <label for="textRoleName" class="form-label">Role <span class="text-danger">*</span></label>
                                                    <input type="text" value="@_userSession.UserId" id="txtUserId" hidden />
                                                    <input type="text" class="form-control" id="textRoleName" placeholder="Enter Role" name="textRoleName" />
                                                    <input type="text" class="form-control" id="textRoleId" name="textRoleId" hidden />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary" onclick="validateAndCreateRole()">Create</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-5 col-xl-5 ac-detail hide-sm">
                            <div class="card radius-10">
                                <div class="card-body d-none" style="height:650px">
                                    <h5 class="mb-0 mt-4">User Information</h5>
                                    <hr>
                                    <div class="row g-3">
                                        <div class="col-6">
                                            <label class="form-label">First Name</label>
                                            <input type="text" class="form-control" id="dspFirstName" readonly>
                                            <input type="hidden" class="form-control" id="createdbyid" value="@_userSession.UserId">
                                        </div>
                                        <div class="col-6">
                                            <label class="form-label">Last Name</label>
                                            <input type="text" class="form-control" id="dspLastName" readonly>
                                        </div>
                                        <div class="col-6">
                                            <label class="form-label">Username</label>
                                            <input type="text" class="form-control" id="dspUserName" readonly>
                                        </div>
                                        <div class="col-6">
                                            <label class="form-label">Site</label>
                                            <input type="text" class="form-control" id="dspSiteName" readonly>
                                        </div>
                                        <div class="col-6">
                                            <label class="form-label">Password</label>
                                            <input type="text" class="form-control" id="dspPassword" readonly>
                                        </div>
                                        <div class="col-6">
                                            <label class="form-label">Email</label>
                                            <input type="text" class="form-control" id="dspEmail" readonly>
                                        </div>
                                        <div class="col-6">
                                            <label class="form-label">Phone</label>
                                            <input type="text" class="form-control" id="dspPhoneNo" readonly>
                                        </div>
                                        <div class="col-6">
                                            <label class="form-label">Role</label>
                                            <input type="text" class="form-control" id="dspRole" readonly>
                                        </div>

                                    </div>
                                </div>
                                @* </form> *@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="offcanvas offcanvas-end border-0 w-25 ac-add-edit" tabindex="-1" id="createFormGroup">
        <div class="d-flex align-items-center bg-primary bg-gradient p-3 offcanvas-header">
            <h5 class="m-0 me-2 text-white">Update Rolewise Form Permission</h5>

            <button type="button" class="btn-close btn-close-white ms-auto" id="customizerclose-btn" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body p-0">
            <div data-simplebar class="h-100">
                <div class="p-4">
                    <div>
                        <div>
                            <form class="row g-3" id="userForm">
                                <!---Partial View--->
                                <div class="col-12" id="dveditRolePermissionForm"></div>
                                <div class="col-12">
                                    <button type="button" class="btn btn-lg btn-success col-lg-12" onclick="UpdateRolewiseFormPermission()" id="btnUserRolewiseForm">Update</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/moduls/rolewiseformpermissionscript.js" asp-append-version="true"></script>
}





