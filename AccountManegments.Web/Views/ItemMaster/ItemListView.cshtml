@inject IHttpContextAccessor Accessor;
@inject UserSession _userSession
@{
    ViewData["Title"] = "Item Master";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}
<style>
    #txtItemName-error, #txtUnitType-error, #txtPricePerUnit-error,
    #txtGstAmount-error, #txtGstPerUnit-error, #itemExcelFile-error {
        color: red;
    }

    label.failed {
        color: red;
    }
</style>
@section HeaderButton {

    @if (UserSession.FormPermisionData.Any(a => a.FormName == "Item" && (a.Add == true)))
    {
        <div class="d-flex gap-2 ms-auto">
            <button type="button" class="btn btn-primary" onclick="ClearTextBox()"><i class="lni lni-circle-plus"></i>Create Item</button>
            <button type="button" class="btn btn-success" onclick="downloadFile()">Download File</button>
            <button type="button" onclick="OpenFileUploadModel()" class="btn btn-success">Upload File</button>

        </div>
    }
}

<div class="">
    <div class="">
        <div class=" radius-10 w-100">
            <div class="my-3 border-bottom"></div>
            <div class="">
                <div class="row">
                    <div class="col-12 col-lg-7 col-md-7 col-xl-7">
                        <div class="card radius-10 w-100">
                            <div class="card-body">
                                <div class="row w-100 ac-view-list card radius-10 w-100">
                                    <div class="row ">
                                        <div class="col-12">
                                            <div class="card-body">
                                                <div class="row g-3">
                                                    @if (ViewBag.Code != null && ViewBag.Message != null)
                                                    {
                                                        <div class="alert alert-danger d-flex align-items-center justify-content-between" role="alert">
                                                            <h3 class="text-danger">@ViewBag.Code @ViewBag.Message</h3>
                                                            <button id="errorCloseButton" class="btn btn-outline-danger btn-lg" aria-label="Close">×</button>
                                                        </div>
                                                    }
                                                    <div class="col-12 col-lg-4">
                                                        <input class="form-control" id="txtItemSearch" onkeyup="filterItemTable()" placeholder="Search" />
                                                    </div>
                                                    <div class="col-12 col-lg-4">
                                                        <select class="form-select" id="ddlItemSearchBy" onchange="filterItemTable()">
                                                            <option selected="selected">All</option>
                                                            <option>ItemName</option>
                                                            <option>PerUnitPrice</option>
                                                            <option>IsApproved</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-12 col-lg-4">
                                                        <select class="form-select" id="ddlItemSortBy" onchange="sortItemTable()">
                                                            <option value="DescendingCreatedOn" selected="selected">Most Recent</option>
                                                            <option value="AscendingCreatedOn">First Created</option>
                                                            <option value="AscendingItemName">ItemName(a-z)</option>
                                                            <option value="DescendingItemName">ItemName(z-a)</option>
                                                            <option value="AscendingPerUnitPrice">PerUnitPrice-Asc </option>
                                                            <option value="DescendingPerUnitPrice">PerUnitPrice-Des</option>
                                                        </select>
                                                    </div>
                                                </div><!--end row-->
                                            </div>
                                        </div>
                                    </div><!--end row-->
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table align-middle mb-0">
                                                <thead class="table-light btn-primary">
                                                    <tr>
                                                        <th>Item Name</th>
                                                        <th>Price</th>
                                                        <th>Approved</th>
                                                        @if (UserSession.FormPermisionData.Any(a => a.FormName == "Item" && (a.Edit == true || a.Delete == true)))
                                                        {
                                                            <th>Action</th>
                                                        }
                                                    </tr>
                                                </thead>
                                                <tbody id="itemtbody">
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--end row-->
                    </div>
                    <div class="col-12 col-lg-5 col-xl-5 ac-detail hide-sm">
                        <div class="card radius-10">
                            <div class="card-body" style="height:658px;">
                                <h5 class="mb-0 mt-4">Item Details</h5>
                                <hr>
                                <div class="row g-3 ac-detail d-none" id="ItemDetailsView">
                                    <div class="col-6">
                                        <label class="form-label">Item Name</label>
                                        <input type="text" class="form-control" id="dspItemName" readonly>
                                        <input type="hidden" class="form-control" id="dspItemId" readonly>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">Unit Name</label>
                                        <input type="text" class="form-control" id="dspUnitName" readonly>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">Price Per Unit</label>
                                        <div class="input-group mb-3">
                                            <span class="input-group-text">₹</span>
                                            <input type="text" class="form-control" id="dspPricePerUnit" readonly>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">IsWithGST</label>
                                        <div class="form-check form-switch mb-3">
                                            <input class="form-check-input font-22" id="dspWithGst" type="checkbox" style="margin-left:-35px;" disabled>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">GST Amount</label>
                                        <div class="input-group mb-3">
                                            <span class="input-group-text">₹</span>
                                            <input type="text" class="form-control" id="dspGstAmount" readonly>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">GST %</label>
                                        <input type="text" class="form-control" id="dspGstPercentage" readonly>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">HsnCode</label>
                                        <input type="text" class="form-control" id="dspHsnCode" readonly>
                                    </div>
                                </div>
                                <div id="ItemHistoryView" class="card d-none"></div>
                            </div>
                            <div class="col-12 text-end" style="display:none;margin-top: -38px;padding-bottom: 10px;padding-right: 22px;" id="itemhistoryPdf">
                                <a class="btn" onclick="ExportItemHistoryToExcel()" style="background-color:#018749;color:white;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 48 48">
                                        <path fill="currentColor" fill-rule="evenodd" d="M29 6v8h13v2H29v7h13V8c0-1.105-.836-2-1.867-2zm0 19h13v7H29zm0 9h13v6c0 1.105-.836 2-1.867 2H29zm-2 0v8H15.867C14.836 42 14 41.105 14 40v-6zm0-20H14V8c0-1.105.836-2 1.867-2H27zm-3.948 2v7H27v-7zm0 9v7H27v-7zM6 17a1 1 0 0 1 1-1h13.158a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1zm3.607 2h2.26l1.834 3.754L15.64 19h2.112l-2.91 5l2.976 5H15.59l-1.999-3.93l-1.99 3.93H9.34l3.024-5.018z" clip-rule="evenodd" />
                                    </svg><span> Excel</span>
                                </a>
                                <a class="btn" onclick="ExportItemHistoryToPDF()" style="background-color:#B31B1B;color:white;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 1536 1792">
                                        <path fill="currentColor" d="M1468 380q28 28 48 76t20 88v1152q0 40-28 68t-68 28H96q-40 0-68-28t-28-68V96q0-40 28-68T96 0h896q40 0 88 20t76 48zm-444-244v376h376q-10-29-22-41l-313-313q-12-12-41-22m384 1528V640H992q-40 0-68-28t-28-68V128H128v1536zm-514-593q33 26 84 56q59-7 117-7q147 0 177 49q16 22 2 52q0 1-1 2l-2 2v1q-6 38-71 38q-48 0-115-20t-130-53q-221 24-392 83q-153 262-242 262q-15 0-28-7l-24-12q-1-1-6-5q-10-10-6-36q9-40 56-91.5t132-96.5q14-9 23 6q2 2 2 4q52-85 107-197q68-136 104-262q-24-82-30.5-159.5T657 552q11-40 42-40h22q23 0 35 15q18 21 9 68q-2 6-4 8q1 3 1 8v30q-2 123-14 192q55 164 146 238m-576 411q52-24 137-158q-51 40-87.5 84t-49.5 74m398-920q-15 42-2 132q1-7 7-44q0-3 7-43q1-4 4-8q-1-1-1-2q-1-2-1-3q-1-22-13-36q0 1-1 2zm-124 661q135-54 284-81q-2-1-13-9.5t-16-13.5q-76-67-127-176q-27 86-83 197q-30 56-45 83m646-16q-24-24-140-24q76 28 124 28q14 0 18-1q0-1-2-3" />
                                    </svg><span> PDF</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="offcanvas offcanvas-end border-0 w-25 ac-add-edit" tabindex="-1" id="CreateItem">
        <div class="d-flex align-items-center bg-primary bg-gradient p-3 offcanvas-header">
            <h5 class="m-0 me-2 text-white" id="changeName"></h5>
            <button type="button" class="btn-close btn-close-white ms-auto" id="customizerclose-btn" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body p-0">
            <div data-simplebar class="h-100">
                <div class="p-4">
                    <div class="card">
                        <div class="card-body">
                            <form class="row g-3" id="ItemMsterForm">
                                <div class="col-12">
                                    <label class="form-label">Item Name</label>
                                    <input type="text" class="form-control" placeholder="Item Name" id="txtItemName" name="txtItemName">
                                    <input type="hidden" id="txtItemid">
                                    <span id="spnItemName" class="text-danger"></span>
                                </div>
                                <div class="col-lg-5 col-12">
                                    <label class="form-label">Unit Type</label>
                                    <input type="text" id="txtUnitType" name="txtUnitType" class="form-control" placeholder="Unit Type">
                                    <span id="spnUnitType" class="text-danger"></span>
                                </div>
                                <input type="hidden" id="txtUnitTypeHidden" name="txtUnitTypeHidden">

                                <div class="col-lg-5 col-12">
                                    <label class="form-label">Price</label>
                                    <input type="number" class="form-control form-control" placeholder="Price Per Unit" id="txtPricePerUnit" name="txtPricePerUnit">
                                    <span id="spnPricePerUnit" class="text-danger"></span>
                                </div>
                                <div class="col-lg-2 col-12">
                                    <label class="form-label">WithGST</label>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input font-22" id="txtIsWithGst" type="checkbox" style="margin-left:-35px;">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <label class="form-label">GST%</label>
                                    <input type="text" class="form-control form-control" placeholder="GST%" id="txtGstPerUnit" name="txtGstPerUnit">
                                    <span id="spnGstPerUnit" class="text-danger"></span>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <label class="form-label">GST Amount</label>
                                    <input type="text" class="form-control form-control" placeholder="Gst Amount" id="txtGstAmount" name="txtGstAmount" disabled>
                                    <span id="spnGstAmount" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">HSN Code</label>
                                    <input type="text" class="form-control form-control" placeholder="HSN Code" id="txtHSNCode">
                                    <span id="spnHSNCode" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <button type="button" class="btn btn-lg btn-success col-lg-12" onclick="validateAndCreateItem()" id="btnitem"></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="uploadExcelFileModal" class="modal fade flip" tabindex="-1" aria-labelledby="flipModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form id="uploadItemFile" method="post" enctype="multipart/form-data">
                    <div class="modal-header">
                        <h5 class="modal-title" id="flipModalLabel">Upload Excel File</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="hstack gap-3 align-items-start">
                            <div class="flex-grow-1">
                                <label>Upload Excel File :</label>
                                <input type="file" name="itemExcelFile" id="itemExcelFile" class="form-control" accept=".csv,.xls,.xlsx" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                        <button type="button" onclick="UploadItemFile()" class="btn btn-primary">Upload</button>
                    </div>
                </form>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js" asp-append-version="true"></script>
    <script src="~/moduls/itemmasterscript.js" asp-append-version="true"></script>
}
