@model AccountManagement.DBContext.Models.ViewModels.SiteMaster.SiteMasterModel
@inject IHttpContextAccessor Accessor;
@inject UserSession _userSession

@{
    ViewData["Title"] = "CreateGroup";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}

@section HeaderButton {
    <div class="d-flex gap-2 ms-auto">

        @if (UserSession.FormPermisionData.Any(a => a.FormName == "Site" && (a.Add == true)))
        {
            <button type="button" class="btn btn-primary" onclick="toggleSiteDetailsAndGroupInfo(true)"><i class="lni lni-circle-plus"></i>Add Group</button>
        }
    </div>
}
<style>
    #textGroupSiteList-error, #txtSiteGropuName-error {
        color: red;
    }
</style>
<div class="">
    <div class="">
        <div class=" radius-10 w-100">
            <div class="my-3 border-bottom"></div>
            <div class="">
                <div class="row">
                    <div class="col-12 col-lg-7 col-md-7 col-xl-7">
                        <div class="card radius-10 w-100">
                            <div class="card-body">
                                <div class="row w-100 ac-view-list card radius-10 w-100">
                                    <div class="row ">
                                        <div class="col-12">
                                            <div class="card-body">
                                                <div class="row g-3">
                                                    <div class="col-12 col-lg-4">
                                                        <input class="form-control" id="txtSiteGroupSearch" onkeyup="SiteGroupfilterTable()" placeholder="Search">
                                                    </div>
                                                    <div class="col-12 col-lg-4">
                                                        <select class="form-select" id="SiteGroupSearchBy" onchange="SiteGroupfilterTable()">
                                                            <option selected="selected">
                                                                All
                                                            </option>
                                                            <option> GroupName </option>
                                                        </select>
                                                    </div>

                                                    <div class="col-12 col-lg-4">
                                                        <select class="form-select" id="SiteGroupDataSortBy" onchange="sortSiteGroupTable()">
                                                            <option value="DescendingCreatedOn" selected="selected">Most Recent</option>
                                                            <option value="AscendingCreatedOn"> First Created</option>
                                                            <option value="AscendingGroupname">GroupName(A - Z) </option>
                                                            <option value="DescendingGroupname">GroupName(Z - A) </option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <!--end row-->

                                            </div>
                                        </div>
                                    </div>

                                    <div class="card-body">
                                        <div class="table-responsive" style="overflow-x: hidden;max-height: 300px;">
                                            <table class="table align-middle mb-0">
                                                <thead class="table-light btn-primary">
                                                    <tr>
                                                        <th>Group Name</th>
                                                        @if (UserSession.FormPermisionData.Any(a => a.FormName == "Site" && (a.Edit == true || a.Delete == true)))
                                                        {
                                                            <th>Action</th>
                                                        }
                                                    </tr>
                                                </thead>
                                                <tbody id="SiteGrouptbody">
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--end row-->
                    </div>
                    <div class="col-12 col-lg-5 col-xl-5 ac-detail hide-sm">
                        <div class="card radius-10">
                            <div class="card-body" style="height:658px;">
                                <h5 class="mb-0 mt-4" id="GroupInfoHeading">Group Information</h5>
                                <hr>
                                <div class="row g-3 ac-detail d-none" id="groupDetailsInfo">
                                    <div class="col-12">
                                        <label class="form-label">Group Name</label>
                                        <input type="text" class="form-control" id="dspGroupName" readonly>
                                        <input type="hidden" class="form-control" id="dspGroupid" readonly>
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">Site Name</label>
                                        <textarea id="dspSite" class="form-control" style="height:80px;" readonly>
                                                    </textarea>
                                    </div>
                                   
                                    <div class="col-12">
                                        <label class="form-label">Multiple Group Address</label>
                                        <div style="border: 1px solid #ced4da;">
                                            <div id="GroupAddressDsp" class="mb-2" style="height: 350px;overflow-y: scroll;">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div id="addgroupinfo" class="card d-none">
                                    <form id="AddSiteGroupForm">
                                        <div class="card-body">
                                            <div class="col-12 mb-3">
                                                <label class="form-label">Group Name</label>
                                                <input type="text" id="txtSiteGroupId" hidden>
                                                <input type="text" class="form-control" placeholder="Group Name" id="txtSiteGropuName" name="txtSiteGropuName">
                                                <span id="spnSiteGropuName" class="text-danger"></span>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12 mb-3">
                                                    <label class="form-label">Select Site</label>
                                                    <select class="form-select" id="textGroupSiteList" name="textGroupSiteList">
                                                        <option value="" selected>--Select Site--</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-12 mb-3">
                                                    <textarea id="SelectedSite" class="form-control" style="height:80px;" readonly>
                                                    </textarea>
                                                    <textarea id="SelectedSiteID" class="form-control" style="height:80px;" hidden>
                                                    </textarea>
                                                </div>
                                            </div>
                                            <div class="col-md-12 mb-3">
                                                <h5>
                                                    <b>
                                                        Multiple Group Address
                                                        <a class="font-22" id="AddMoreGroupAddress">
                                                            <i class="lni lni-circle-plus"></i>
                                                        </a>
                                                    </b>
                                                </h5>
                                            </div>
                                            <div class="col-md-12 mb-3">
                                                <div class="card border mb-3">
                                                    <div id="GroupAddressTable" class="mb-2" style="height: 180px;overflow-y: scroll;">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-primary" onclick="AddSiteGroupDetails()" id="addsitegroupbtn">Save</button>
                                            <button type="button" class="btn btn-primary" onclick="UpdateSiteGroupDetails()" id="updatesitegroupbtn" style="display:none;">Update</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



@section Scripts {

    <script src="~/moduls/masterlistscript.js" asp-append-version="true"></script>
    <script src="~/moduls/sitemasterscript.js" asp-append-version="true"></script>
}
