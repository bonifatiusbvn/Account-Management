
@{
    ViewData["Title"] = "SiteListView";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Site</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0 align-items-center">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><ion-icon name="home-outline"></ion-icon></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Site Details</li>
            </ol>
        </nav>
    </div>
</div>
 
<div class="">
    <div class=" radius-10 w-100">
        <div class="d-flex align-items-center">
            <h2 class="h5 mb-0">Site Details</h2>
            <form class="ms-auto position-relative">
                <button type="button" class="btn btn-info px-5" onclick="ClearTextBox()"><i class="lni lni-circle-plus"></i>Add Site</button>
            </form>
        </div>
        <div class="my-3 border-bottom"></div>
        <div class="">

            <div class="row">
                <div class="col-12 col-lg-7 col-md-7 col-xl-7">
                    <div class="card radius-10 w-100">
                        <div class="card-body">
                            <div class="row ">
                                <div class="col-12">
                                    <div class="card-body">
                                        <div class="row g-3">

                                            <div class="col-12 col-lg-4">
                                                <input class="form-control" id="txtSearch" onkeyup="filterTable()" placeholder="Search">
                                            </div>
                                            <div class="col-12 col-lg-4">
                                                <select class="form-select" id="ddlSearchBy" onchange="filterTable()">
                                                    <option selected="selected">All</option>
                                                    <option>SiteName</option>
                                                    <option>ContectPersonName</option>
                                                    <option>ContectPersonPhoneNo</option>
                                                </select>
                                            </div>

                                            <div class="col-12 col-lg-4">
                                                <select class="form-select" id="ddlSortBy" onchange="sortTable()">
                                                    <option value="DescendingCreatedOn" selected="selected">Default sorting</option>
                                                    <option value="AscendingSitename">Ascending Sitename</option>
                                                    <option value="DescendingSitename">Descending Sitename</option>
                                                    <option value="AscendingActive">Ascending Active</option>
                                                    <option value="DescendingActive">Descending Active</option>
                                                    <option value="AscendingContectPersonName">Ascending ContectPersonName</option>
                                                    <option value="DescendingContectPersonName">DescendingContectPersonName</option>
                                                    <option value="AscendingContectPersonPhoneNo">Ascending ContectPersonPhoneNo</option>
                                                    <option value="DescendingContectPersonPhoneNo">Descending ContectPersonPhoneNo</option>
                                                </select>
                                            </div>
                                        </div><!--end row-->

                                    </div>

                                </div>

                            </div>

                            <div class="row w-100 ac-view-list">

                                <div class="row hide-sm table-light" style="position:sticky;TOP:0;z-index:99;background: #923eb9!important;height: 32px;padding-top: 5px;margin-right: 0px;">
                                    <div class="col-3 text-center">
                                        <h5>Site Name</h5>
                                    </div>
                                    <div class="col-4 ">
                                        <h5>Contect Person Name</h5>
                                    </div>
                                    <div class="col-2 ">
                                        <h5>Active</h5>
                                    </div>
                                    <div class="col-2">
                                        <h5>Action</h5>
                                    </div>
                                </div>
                                <div class="card" id="Sitetbody">
                                </div>

                            </div>
                            <div class="table-responsive mt-2  d-none" style="max-height:200PX;">
                                <table class="table align-middle mb-0" style="">
                                    <thead class="table-light" id="siteTable">
                                        <tr>
                                            <th>Site Name</th>

                                            <th class="mb-2">Contect Person Name</th>
                                            <th class="mb-2">Contect Person Phone No</th>

                                            <th class="mb-2">Active</th>
                                            <th class="mb-2">Role Name</th>
                                            <th class="mb-2">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="Sitetbody" style="max-height:20PX;">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!--end row-->


                </div>
                <div class="col-12 col-lg-5 col-xl-5 ac-detail hide-sm">
                    <div class="card radius-10">
                        <div class="card-body">
                            <h5 class="mb-0 mt-4">Site Information</h5>
                            <hr>
                            <div class="row g-3">
                                <div class="col-12">
                                    <label class="form-label">Site Name</label>
                                    <input type="text" class="form-control" id="dspSiteName" readonly>
                                    <input type="hidden" class="form-control" id="dspSiteid" readonly>
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Contact Person Name</label>
                                    <input type="text" class="form-control" id="dspContactPersonName" readonly>
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Contact Person Phone No</label>
                                    <input type="text" class="form-control" id="dspContactPersonPhoneNo" readonly>
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Address</label>
                                    <input type="text" class="form-control" id="dspAddress" readonly>
                                </div>
                                <div class="col-6">
                                    <label class="form-label">City</label>
                                    <input type="text" class="form-control" id="dspCity" readonly>
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Pincode</label>
                                    <input type="text" class="form-control" id="dspPincode" readonly>
                                </div>

                            </div>
                        </div>
                        @* </form> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="offcanvas offcanvas-end border-0 w-25 ac-add-edit" tabindex="-1" id="createSite">
    <div class="d-flex align-items-center bg-primary bg-gradient p-3 offcanvas-header">
        <h5 class="m-0 me-2 text-white">Create Site</h5>

        <button type="button" class="btn-close btn-close-white ms-auto" id="customizerclose-btn" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body p-0">
        <div data-simplebar class="h-100">
            <div class="p-4">
                <div class="card">
                    <div class="card-body">
                        <form class="row g-3" id="siteForm">
                            <div class="col-12">
                                <label class="form-label">Site Name</label>
                                <input type="text" class="form-control mb-3" placeholder="Site Name" id="txtSiteName" required>
                                <input type="hidden" id="txtSiteid">
                                <span id="spnSiteName" class="text-danger"></span>
                            </div>
                            <div class="col-6">
                                <label class="form-label">Contact Person Name</label>
                                <input type="text" class="form-control mb-3" placeholder="Contact Person Name" id="txtContectPersonName" required>
                                <span id="spnContectPersonName" class="text-danger"></span>
                            </div>
                            <div class="col-6">
                                <label class="form-label">Contact Person Phone No.</label>
                                <input type="text" class="form-control" placeholder="Contact Person Phone No." id="txtContectPersonPhoneNo" required>
                                <span id="spnContectPersonPhoneNo" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label class="form-label">Country</label>
                                    <select id="ddlCountry" class="form-control mb-3 bg-transparent" required>
                                        <option>--Select Country--</option>
                                    </select>
                                    <input type="hidden" id="txtcountry" value="" />
                                    <span id="spnCountry" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label class="form-label">State</label>
                                    <select id="ddlState" class="form-control mb-3 bg-transparent" required>
                                        <option>--Select State--</option>
                                    </select>
                                    <input type="hidden" id="txtstate" value="" />
                                    <span id="spnState" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label class="form-label">City</label>
                                    <select id="ddlCity" name="ddlCity" class="form-control mb-3 bg-transparent" required>
                                        <option>--Select City--</option>
                                    </select>
                                    <input type="hidden" id="txtcity" name="txtcity" value="" />
                                    <span id="spnCity" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Area</label>
                                    <input type="text" class="form-control mb-3" placeholder="Area" id="txtArea" required>
                                    <span id="spnArea" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label class="form-label">Address</label>
                                    <input type="text" class="form-control mb-3" placeholder="Address" id="txtAddress" required>
                                    <span id="spnAddress" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Pincode</label>
                                    <input type="text" class="form-control mb-3" placeholder="Pincode" id="txtPincode" required>
                                    <span id="spnPincode" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <label class="form-label"> Shipping Country</label>
                                    <select id="ddlShippingCountry" class="form-control mb-3 bg-transparent" required>
                                        <option>--Select Country--</option>
                                    </select>
                                    <input type="hidden" id="txtShippingcountry" value="" />
                                    <span id="spnShippingCountry" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label class="form-label"> Shipping State</label>
                                    <select id="ddlShippingState" class="form-control mb-3 bg-transparent" required>
                                        <option>--Select State--</option>
                                    </select>
                                    <input type="hidden" id="txtShippingstate" value="" />
                                    <span id="spnShippingState" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label class="form-label">Shipping City</label>
                                    <select id="ddlShippingCity" class="form-control mb-3 bg-transparent" required>
                                        <option>--Select City--</option>
                                    </select>
                                    <input type="hidden" id="txtShippingcity" value="" />
                                    <span id="spnShippingCity" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Shipping Area</label>
                                    <input type="text" class="form-control mb-3" placeholder="Shipping Area" id="txtShippingArea" required>
                                    <span id="spnShippingArea" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label class="form-label">Shipping Address</label>
                                    <input type="text" class="form-control mb-3" placeholder="Shipping Address" id="txtShippingAddress" required>
                                    <span id="spnShippingAddress" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Shipping Pincode</label>
                                    <input type="text" class="form-control form-control-lg mb-3" placeholder="Shipping Pincode" id="txtShippingPincode" required>
                                    <span id="spnShippingPincode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="button" class="btn btn-lg btn-success col-lg-12" onclick="validateAndCreateSite()" id="btnSite"></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

    @section Scripts {

    <script src="~/moduls/sitemasterscript.js"></script>
    <script src="~/moduls/masterlistscript.js"></script>
    }


