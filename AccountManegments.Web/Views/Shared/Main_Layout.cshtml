    <script type="text/javascript">
        function fn_autoselect(element, url, hiddenField) {
            $.ajax({
                url: url,
                method: 'GET',
                success: function (result) {
                    var dataList = result.map(function (data) {
                        return {
                            label: data.unitName || data.itemName,
                            value: data.unitId || data.itemId
                        };
                    });

                    $(element).autocomplete({
                        source: dataList,
                        minLength: 0,
                        select: function (event, ui) {
                            event.preventDefault();
                            $(element).val(ui.item.label);
                            $(hiddenField).val(ui.item.value);
                        }
                    }).focus(function () {
                        $(this).autocomplete("search");
                    });
                },
                error: function (err) {
                    console.error("Failed to fetch data: ", err);
                }
            });
        }

        $(document).ready(function () {
            var role = "@_userSession.UserRole";
            var SiteId = "@UserSession.SiteId";
            var SiteName = "@UserSession.SiteName";

            

            $('#drpSiteName').change(function () {
                
                var SiteText = $(this).find('option:selected').text();
                var selectedSiteId = $(this).val();
                
                $('#drpSiteName').text(SiteText);
                fn_ChangeSite(selectedSiteId, SiteText);

            });
        });

        function fn_ChangeSite(selectedSiteId, SiteText) {
           
            $.ajax({
                url: '/Home/PurchaseRequestList',
                type: 'GET',
                data: {
                    SiteId: selectedSiteId,
                    SiteName: SiteText
                },
                success: function (result) {
                    siteloaderhide();
                    $('#drpSiteName').text(SiteText);
                    $("#tbPndingApproval").html(result);
                    sessionStorage.setItem('SelectedSiteId', selectedSiteId);
                    location.reload();
                },
                error: function (xhr, status, error) {
                    console.error("Error fetching purchase request list:", error);
                }
            });
        }



    </script>
