@inject IHttpContextAccessor Accessor;
@inject UserSession _userSession
@model IEnumerable<AccountManagement.DBContext.Models.ViewModels.PurchaseOrder.PurchaseOrderView>

@foreach (var item in Model)
{
    <tr id="userCard_@item.Id" class="" onclick="window.location.href='/PurchaseMaster/DisplayPODetails?POId=@item.Id'">
        <td><a class="text-primary"><h6 class="product-name mb-2">@item.BuyersPurchaseNo</h6></a></td>
        <td>@(item.Date.HasValue ? item.Date.Value.ToString("dd/MM/yyyy") : string.Empty)</td>
        @if (_userSession.UserRole == 3)
        {
            <td>@item.SiteName</td>
        }
        <td>@item.SupplierName</td>
        <td>@item.CompanyName</td>
        <td>@item.TotalAmount</td>
        @if (UserSession.FormPermisionData.Any(a => a.FormName == "Purchase Orders" && (a.Edit == true || a.Delete == true)))
        {
            <td>
                @if (UserSession.FormPermisionData.Any(a => a.FormName == "Purchase Orders" && (a.Edit == true)))
                {
                    <a class="btn text-primary" href="DisplayPurchaseOrderDetails?Id=@item.Id" title="Edit" aria-label="Edit"><i class="fadeIn animated bx bx-edit"></i></a>
                }
                @if (UserSession.FormPermisionData.Any(a => a.FormName == "Purchase Orders" && (a.Delete == true)))
                {
                    <a href="javascript:;" class="btn text-primary" onclick="DeletePODetails('@item.Id')" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Delete" aria-label="Delete"><i class="lni lni-trash"></i></a>
                }
            </td>
        }
    </tr>
}

