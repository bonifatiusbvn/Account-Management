@inject IHttpContextAccessor Accessor;
@inject UserSession _userSession
@model IEnumerable<AccountManagement.DBContext.Models.ViewModels.CompanyModels.CompanyModel>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@foreach (var item in Model)
{
    <tr id="companyCard_@item.CompanyId" onclick="SelectCompanyDetails('@item.CompanyId', this)">
        <td>@item.CompanyName</td>
        <td>@item.Gstno</td>
        <td>@item.PanNo</td>
        @if (UserSession.FormPermisionData.Any(a => a.FormName == "Company" && (a.Edit == true || a.Delete == true)))
        {
            <td>
                @if (UserSession.FormPermisionData.Any(a => a.FormName == "Company" && (a.Edit == true)))
                {
                    <a class="btn text-primary" onclick="GetCompnaytById('@item.CompanyId')" title="Edit" aria-label="Edit"><i class="fadeIn animated bx bx-edit"></i></a>
                }
                @if (UserSession.FormPermisionData.Any(a => a.FormName == "Company" && (a.Delete == true)))
                {
                    <a href="javascript:;" class="btn text-primary" onclick="DeleteCompanyDetails('@item.CompanyId')" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Delete" aria-label="Delete"><i class="lni lni-trash"></i></a>
                }
            </td>
        }
    </tr>
}
