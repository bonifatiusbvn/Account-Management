@inject UserSession _userSession
@inject IHttpContextAccessor Accessor;
@{
    ViewData["Title"] = "SupplierList";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}


<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Supplier</div>
    <div class="ps-3 flex-grow-1">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0 align-items-center">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><ion-icon name="home-outline"></ion-icon></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Supplier List</li>
            </ol>
        </nav>
    </div>
    <div class="d-flex align-items-center">
        <form class="position-relative">
            @if (UserSession.FormPermisionData.Any(a => a.FormName == "Supplier" && (a.Add == true)))
            {
                <button type="button" class="btn btn-primary" onclick="ClearSupplierTextBox()"><i class="lni lni-circle-plus"></i>Supplier</button>
            }
        </form>
    </div>
</div>

<div class="">
    <div class="">
        <div class=" radius-10 w-100">
            <div class="my-3 border-bottom"></div>
            <div class="">
                <div class="row">
                    <div class="col-12 col-lg-7 col-md-7 col-xl-7">
                        <div class="card radius-10 w-100">
                            <div class="card-body">


                                <div class="row w-100 ac-view-list card radius-10 w-100">

                                    <div class="row ">
                                        <div class="col-12">
                                            <div class="card-body">
                                                <div class="row g-3">

                                                    <div class="col-12 col-lg-4">
                                                        <input class="form-control" id="txtSupplierSearch" onkeyup="filterSupplierTable()" placeholder="Search" />
                                                    </div>
                                                    <div class="col-12 col-lg-4">
                                                        <select class="form-select" id="SupplierSearchBy" onchange="filterSupplierTable()">
                                                            <option selected="selected">All</option>
                                                            <option>Supplier Name</option>
                                                        </select>
                                                    </div>

                                                    <div class="col-12 col-lg-4">
                                                        <select class="form-select" id="SupplierSortBy" onchange="sortSupplierTable()">
                                                            <option value="DescendingCreatedOn" selected="selected">Last Created</option>
                                                            <option value="AscendingCreatedOn">First Created</option>
                                                            <option value="AscendingSupplierName">SupplierName(a-z)</option>
                                                            <option value="DescendingSupplierName">SupplierName(z-a)</option>
                                                        </select>
                                                    </div>
                                                </div><!--end row-->

                                            </div>

                                        </div>

                                    </div>


                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table align-middle mb-0">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Supplier Info</th>
                                                        <th>GST No.</th>
                                                        <th>Active</th>
                                                        @if (UserSession.FormPermisionData.Any(a => a.FormName == "Supplier" && (a.Edit == true || a.Delete == true)))
                                                        {
                                                            <th>Action</th>
                                                        }
                                                    </tr>
                                                </thead>
                                                <tbody id="Supplierbody">
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>


                                </div>

                            </div>
                        </div>
                        <!--end row-->
                    </div>
                    <div class="col-12 col-lg-5 col-xl-5 ac-detail hide-sm">
                        <div class="card radius-10">
                            <div class="card-body" style="height: 658px;">
                                <h5 class="mb-0 mt-4">Supplier Information</h5>
                                <hr>
                                <div class="card-body" style="overflow-y: scroll; max-height: 550px;">
                                    <div class="ac-view-list">
                                        <div class="table-responsive" style="width: 100%;">
                                            <table class="table align-middle mb-0" id="customerTable">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>InvoiceNo</th>
                                                        <th>Date</th>
                                                        <th>YouGave</th>
                                                        <th>YouGet</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="supplierinvoicedetails">
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="offcanvas offcanvas-end border-0 w-25 ac-add-edit" tabindex="-1" id="createSupplier">
        <div class="d-flex align-items-center bg-primary bg-gradient p-3 offcanvas-header">
            <h5 class="m-0 me-2 text-white">Create Supplier</h5>
            <button type="button" class="btn-close btn-close-white ms-auto" id="customizerclose-btn" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body p-0">
            <div data-simplebar class="h-100">
                <div class="p-4">
                    <div class="card">
                        <div class="card-body">
                            <form class="row g-3" id="SupplierForm">
                                <div class="col-md-12">
                                    <label class="form-label">Supplier Name</label>
                                    <input type="text" class="form-control" placeholder="Supplier Name" id="txtSupplierName" name="txtSupplierName" required>
                                    <input type="hidden" id="txtSupplierid" required>
                                    <span id="spnSupplier" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Phone Number</label>
                                    <input type="text" class="form-control" placeholder="Phone Number" id="txtPhoneNo" name="txtPhoneNo" required>
                                    <span id="spnPhoneNo" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Email</label>
                                    <input type="text" class="form-control" placeholder="Email Address" id="txtEmail" name="txtEmail" required>
                                    <span id="spnEmail" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label">GST Number</label>
                                    <input type="text" class="form-control" placeholder="GST Number" id="txtGST" name="txtGST" required>
                                    <span id="spnGST" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label">Building Name</label>
                                    <input type="text" class="form-control" placeholder="Building Name" id="txtBuilding" name="txtBuilding" required>
                                    <span id="spnBuilding" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label">Area</label>
                                    <textarea type="text" class="form-control" rows="3" placeholder="Area" id="txtArea" name="txtArea" required style="height: 75px;"></textarea>
                                    <span id="spnArea" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">PinCode</label>
                                    <input type="text" class="form-control" placeholder="PinCode" id="txtPinCode" name="txtPinCode" required>
                                    <span id="spnPinCode" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">City</label>
                                    <select id="ddlCity" name="ddlCity" class="form-control bg-transparent">
                                        <option value="0">--Select City--</option>
                                    </select>
                                    <input type="hidden" id="txtcity" value="" />
                                    <span class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">State</label>
                                    <select id="dropState" name="dropState" class="form-control bg-transparent" onclick="fn_getcitiesbystateId('ddlCity',null,this)">
                                        <option value="0" selected>--Select State--</option>
                                    </select>
                                    <input type="hidden" id="txtstate" value="" />
                                    <span class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Country</label>
                                    <select id="ddlCountry" name="ddlCountry" class="form-control bg-transparent" onchange="fn_getState('dropState',null,this)">
                                        <option>--Select Country--</option>
                                    </select>
                                    <span class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <h5><b>Bank Details</b></h5>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Bank Name</label>
                                    <input type="text" class="form-control" placeholder="Bank Name" id="txtBank" name="txtBank" required>
                                    <span id="spnBank" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Account Number</label>
                                    <input type="text" class="form-control" placeholder="Account Number" id="txtAccount" name="txtAccount" required>
                                    <span id="spnAccount" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">IFFC Code</label>
                                    <input type="text" class="form-control" placeholder="IFFC Code" id="txtIFFC" name="txtIFFC" required>
                                    <span id="spnIFFC" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <button type="button" class="btn btn-lg btn-success col-lg-12" onclick="CreateSupplier()" id="btnsupplier">Submit</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
<style>
    #txtSupplierName-error, #txtPhoneNo-error, #txtEmail-error, #txtGST-error,
    #txtBuilding-error, #txtArea-error, #txtPinCode-error, #ddlCity-error,
    #dropState-error, #ddlCountry-error, #txtBank-error, #txtAccount-error,
    #txtIFFC-error {
        color: red;
    }

    label.failed {
        color: red;
    }
</style>

    @section Scripts {
        <script src="~/moduls/MasterListScript.js" asp-append-version="true"></script>
        <script src="~/moduls/SupplierScript.js" asp-append-version="true"></script>
    }
