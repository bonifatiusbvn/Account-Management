</style>
<input type="hidden" id="txtUserid" value="@_userSession.UserId" />
@section HeaderButton {

    @if (UserSession.FormPermisionData.Any(a => a.FormName == "Supplier" && (a.Add == true)))
    {
        <div class="d-flex gap-2 ms-auto">
            <button type="button" class="btn btn-primary" onclick="ClearSupplierTextBox()">
                <i class="lni lni-circle-plus"></i> Supplier
