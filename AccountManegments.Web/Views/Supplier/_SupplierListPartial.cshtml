@model IEnumerable<AccountManagement.DBContext.Models.ViewModels.SupplierMaster.SupplierModel>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@foreach (var item in Model)
{
    <div class="row ac-card" id="userCard_@item.SupplierId">
        <div class="card  border mb-0">
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-lg-5 col-md-5 col-xl-5">
                        <div class="d-flex align-items-center gap-3">
                            <div class="widget-icon-2 bg-light-primary text-primary">
                                @* <div class="font-22">
                            <i class="lni lni-user" onclick="SelectUserDetails('@item.SupplierId', this)">

                            </i>
                            </div> *@
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-truck"><rect x="1" y="3" width="15" height="13"></rect><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon><circle cx="5.5" cy="18.5" r="2.5"></circle><circle cx="18.5" cy="18.5" r="2.5"></circle></svg>
                            </div>
                            <div class="flex-grow-1">
                                <h4 class="mb-0 text-primary">@item.SupplierName </h4>
                                <p class="mb-1">@item.Email</p>
                                <p class="mb-1">@item.Mobile</p>
                                <p class="mb-1">@item.Gstno</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-2 col-md-2 col-xl-2">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked_@item.SupplierId" @if (item.IsApproved)
                            {
                                <text>checked</text>
                            } onclick="UserActiveDecative('@item.SupplierId')">
                            <label class="form-check-label" for="flexSwitchCheckChecked_@item.SupplierId"></label>
                        </div>
                    </div>
                    <div class="col-12 col-lg-2 col-md-2 col-xl-2 text-center ac-m-btn">
                        <a class="btn text-warning" onclick="DisplaySupplierDetails('@item.SupplierId')" title="Edit" aria-label="Edit"><i class="fadeIn animated bx bx-edit"></i></a>
                        <a href="javascript:;" class="text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Delete" aria-label="Delete"><i class="lni lni-trash"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
