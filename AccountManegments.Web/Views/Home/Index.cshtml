        <!-- Purchase Requests Table -->
        <div class="col-md-6 mb-3">
            <div class="card" style="max-width: 790px;margin-left: -152px;">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Purchase Requests</h5>
                        <button class="btn btn-success" id="PRApproveBtn" onclick="MutiplePurchaseRequestIsApproved()" style="display:none;">Approve</button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive mt-3" id="PRListTable" style="max-height:280px;min-height:275px;">
                        <table class="table align-middle mb-0">
                            <thead class="table-light btn-primary">
                                <tr>
                                    <th>Site</th>
                                    <th>Item</th>
                                    <th>Unit</th>
                                    <th>Qty</th>
                                    <th>
                                        <input class="form-check-input" type="checkbox" id="checkedAllPR" />
                                        <span class="g-3">Approve</span>
                                    </th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="tbPndingApproval">
                                @if (Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.SiteName</td>
                                            <td>@item.ItemName</td>
                                            <td>@item.UnitName</td>
                                            <td>@item.Quantity</td>
                                            <td>
                                                @if (_userSession.UserRole == 3)
                                                {
                                                    <input class="form-check-input" type="checkbox" name="chk_PRchild" id="PR_@item.Pid" />
                                                }
                                                else
                                                {
                                                    @if (item.IsApproved == true)
                                                    {
                                                        <span class="badge bg-light-success text-success w-100">Approved</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-light-warning text-warning w-100">Pending</span>
                                                    }
                                                }
                                            </td>

                                            @if (UserSession.FormPermisionData.Any(a => a.FormName == "Purchase Request" && (a.Edit == true || a.Delete == true)))
                                            {
                                                <td>
                                                    @if (UserSession.FormPermisionData.Any(a => a.FormName == "Purchase Request" && (a.Delete == true)))
                                                    {
                                                        <a href="javascript:;" class="btn text-primary" onclick="DeletePurchaseRequest('@item.Pid')" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Delete" aria-label="Delete"><i class="lni lni-trash"></i></a>
                                                    }
                                                </td>
                                            }
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr style="height:55px;">
                                        <td colspan="8" class="text-center">No data found for the selected criteria.</td>
                                    </tr>
                                }
                            </tbody>
