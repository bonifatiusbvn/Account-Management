@inject IHttpContextAccessor Accessor;
@inject UserSession _userSession
@model IEnumerable<AccountManagement.DBContext.Models.ViewModels.PurchaseOrder.PurchaseOrderView>

@foreach (var item in Model)
{
    <tr>
        <td><a class="text-primary"><h6 class="product-name mb-2">@item.BuyersPurchaseNo</h6></a></td>
        <td>@(item.Date.HasValue ? item.Date.Value.ToString("dd/MM/yyyy") : string.Empty)</td>
        <td>@item.TotalAmount</td>
        <td>@item.IsApproved</td>
        @if (UserSession.FormPermisionData.Any(a => a.FormName == "Purchase Orders" && (a.Edit == true || a.Delete == true)))
        {
            <td>
                @if (UserSession.FormPermisionData.Any(a => a.FormName == "Purchase Orders" && (a.Delete == true)))
                {
                    <a href="javascript:;" class="btn text-primary" onclick="DeletePODetails('@item.Id'); event.stopPropagation();" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Delete" aria-label="Delete"><i class="lni lni-trash"></i></a>
                }
            </td>
        }
    </tr>
}
